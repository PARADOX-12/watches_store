{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign social_icons = false
  endif
  if section.settings.enable_country_selector or section.settings.enable_language_selector
    assign language_country_selector = true
  endif
  if section.blocks.size > 0
    assign announcement_bar = true
  endif
-%}

{% if social_icons %}
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{% endif %}

<style>
  .utility-bar {
    background-color: #000000;
    color: #ffffff;
    width: 100%;
  }

  /* Remove page-width constraints for full screen */
  .utility-bar .page-width {
    max-width: 100% ;
    padding-left: 0.1 ;
    padding-right: 0.1 ;
  }

  .announcement-bar__grid {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    width: 100%;
    padding: 0.8rem 2rem;
  }

  .announcement-bar__contact {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
    font-size: 0.9rem;
    min-width: 250px;
  }

  .announcement-bar__contact a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #ffffff;
    text-decoration: none;
    white-space: nowrap;
  }

  .announcement-bar__contact svg {
    width: 1rem;
    height: 1rem;
    fill: #ffffff;
  }

  /* Full width announcement content */
  .announcement-bar__announcement-content {
    flex: 1;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    position: relative;
    padding: 0 2rem;
    width: 100%;
  }

  .announcement-bar__message {
    display: inline-block;
    animation: slide-left 15s linear infinite;
    margin: 0;
    font-size: 1rem;
    font-weight: 500;
  }

  @keyframes slide-left {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }

  /* Tablet and small desktop screens */
  @media screen and (min-width: 750px) and (max-width: 989px) {
    .announcement-bar__grid {
      padding: 1rem 3rem;
    }
    
    .announcement-bar__contact {
      min-width: 280px;
      font-size: 1rem;
    }
    
    .announcement-bar__announcement-content {
      padding: 0 2.5rem;
    }
    
    .announcement-bar__message {
      font-size: 1.1rem;
      animation-duration: 18s;
    }
  }

  /* Medium desktop screens */
  @media screen and (min-width: 990px) and (max-width: 1439px) {
    .announcement-bar__grid {
      padding: 1rem 4rem;
    }
    
    .announcement-bar__contact {
      min-width: 300px;
      font-size: 1.05rem;
      gap: 1.2rem;
    }
    
    .announcement-bar__announcement-content {
      padding: 0 3rem;
    }
    
    .announcement-bar__message {
      font-size: 1.2rem;
      animation-duration: 20s;
    }
  }

  /* Large desktop screens */
  @media screen and (min-width: 1440px) and (max-width: 1919px) {
    .announcement-bar__grid {
      padding: 1.2rem 5rem;
    }
    
    .announcement-bar__contact {
      min-width: 320px;
      font-size: 1.1rem;
      gap: 1.5rem;
    }
    
    .announcement-bar__contact svg {
      width: 1.2rem;
      height: 1.2rem;
    }
    
    .announcement-bar__announcement-content {
      padding: 0 4rem;
    }
    
    .announcement-bar__message {
      font-size: 1.3rem;
      animation-duration: 22s;
    }
  }

  /* Extra large screens (1920px and above) */
  @media screen and (min-width: 1920px) {
    .announcement-bar__grid {
      padding: 1.5rem 6rem;
    }
    
    .announcement-bar__contact {
      min-width: 350px;
      font-size: 1.2rem;
      gap: 1.8rem;
    }
    
    .announcement-bar__contact svg {
      width: 1.4rem;
      height: 1.4rem;
    }
    
    .announcement-bar__announcement-content {
      padding: 0 5rem;
    }
    
    .announcement-bar__message {
      font-size: 1.5rem;
      font-weight: 600;
      animation-duration: 25s;
    }
  }

  /* Ultra-wide screens (2560px and above) */
  @media screen and (min-width: 2560px) {
    .announcement-bar__grid {
      padding: 2rem 8rem;
    }
    
    .announcement-bar__contact {
      min-width: 400px;
      font-size: 1.4rem;
      gap: 2rem;
    }
    
    .announcement-bar__contact svg {
      width: 1.6rem;
      height: 1.6rem;
    }
    
    .announcement-bar__announcement-content {
      padding: 0 6rem;
    }
    
    .announcement-bar__message {
      font-size: 1.8rem;
      font-weight: 600;
      animation-duration: 30s;
    }
  }

  /* Mobile adjustments */
    /* HIDE CONTACT INFO ON MOBILE/TABLET - Show in drawer instead */
  @media screen and (max-width: 989px) {
    .announcement-bar__contact {
      display: none !important; /* Hide from announcement bar */
    }
    
    .announcement-bar__grid {
      justify-content: center; /* Center announcement text */
      padding: 1rem;
    }
    
    .announcement-bar__announcement-content {
      padding: 0 1rem;
    }
    
    .announcement-bar__message {
      animation-duration: 12s;
      font-size: 0.9rem;
    }
  }

  @media screen and (min-width: 990px) {
    .announcement-bar__contact {
      display: flex !important; /* Show in announcement bar */
    }
  }

  /* Hide slider buttons for clean look */
  .announcement-bar-slider .slider-button {
    display: none;
  }

  /* Ensure localization wrapper doesn't interfere */
  .localization-wrapper {
    flex-shrink: 0;
  }

  /* Social icons adjustments if enabled */
  .utility-bar__grid--3-col {
    justify-content: space-between;
  }
</style>

<div
  class="utility-bar color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator and section.blocks.size > 0 %} utility-bar--bottom-border{% elsif section.settings.show_line_separator and section.settings.show_social and social_icons%} utility-bar--bottom-border-social-only{% endif %}{% if section.settings.enable_country_selector or section.settings.enable_language_selector %} header-localization{% endif %}"
>

  <div class="page-width announcement-bar__grid{% if announcement_bar and language_country_selector or section.settings.show_social and social_icons %} announcement-bar__grid--3-col{% elsif language_country_selector or section.settings.show_social and social_icons %} announcement-bar__grid--2-col{% endif %}">
    <div class="announcement-bar__contact">
              {%- if section.blocks.first.settings.phone_number != blank -%}
                <a href="tel:{{ section.blocks.first.settings.phone_number | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" aria-label="Call us">
                  {%- render 'icon-phone' -%}
                  {{ section.blocks.first.settings.phone_number }}
                </a>
              {%- endif -%}
                <div class="spacer">
                  |
                </div>
              {%- if section.blocks.first.settings.email != blank -%}
                <a href="mailto:{{ section.blocks.first.settings.email }}" aria-label="Email us">
                {{ section.blocks.first.settings.email }}
                </a>
              {%- endif -%}
            </div>
          <div class="mobile-menu-contact">
            {%- assign announcement_section = section.settings.announcement_bar_section | default: 'announcement-bar' -%}
            {%- for block in sections[announcement_section].blocks -%}
              {%- if forloop.first -%}
                {%- if block.settings.phone_number != blank -%}
                  <a href="tel:{{ block.settings.phone_number | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" class="mobile-menu-contact__item">
                    {%- render 'icon-phone' -%}
                    <span>{{ block.settings.phone_number }}</span>
                  </a>
                {%- endif -%}
                
                {%- if block.settings.email != blank -%}
                  <a href="mailto:{{ block.settings.email }}" class="mobile-menu-contact__item">
                    <span>{{ block.settings.email }}</span>
                  </a>
                {%- endif -%}
              {%- endif -%}
          {%- endfor -%}
    </div>
    {%- if section.blocks.size > 0 -%}
      {%- if section.blocks.size == 1 -%}
        <div
          class="announcement-bar{% if section.settings.show_social %} announcement-bar--one-announcement{% endif %}"
          role="region"
          aria-label="{{ 'sections.header.announcement' | t }}"
          {{ section.blocks.first.shopify_attributes }}
        >
          <div class="announcement-bar__announcement">
            <div class="announcement-bar__announcement-content">
              {%- if section.blocks.first.settings.text != blank -%}
                {%- if section.blocks.first.settings.link != blank -%}
                  <a
                    href="{{ section.blocks.first.settings.link }}"
                    class="announcement-bar__link link link--text focus-inset animate-arrow"
                  >
                {%- endif -%}
                <p class="announcement-bar__message h5">
                  <span>{{ section.blocks.first.settings.text | escape }}</span>
                  {%- if section.blocks.first.settings.link != blank -%}
                    {{- 'icon-arrow.svg' | inline_asset_content -}}
                  {%- endif -%}
                </p>
                {%- if section.blocks.first.settings.link != blank -%}
                  </a>
                {%- endif -%}
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- elsif section.blocks.size > 1 -%}
        <slideshow-component
          class="announcement-bar"
          role="region"
          aria-roledescription="{{ 'sections.announcements.carousel' | t }}"
          aria-label="{{ 'sections.announcements.announcement_bar' | t }}"
        >
          <div class="announcement-bar-slider slider-buttons">
            <button
              type="button"
              class="slider-button slider-button--prev"
              name="previous"
              aria-label="{{ 'sections.announcements.previous_announcement' | t }}"
              aria-controls="Slider-{{ section.id }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </span>
            </button>
            <div
              class="grid grid--1-col slider slider--everywhere"
              id="Slider-{{ section.id }}"
              aria-live="polite"
              aria-atomic="true"
              data-autoplay="{{ section.settings.auto_rotate }}"
              data-speed="{{ section.settings.change_slides_speed }}"
            >
              {%- for block in section.blocks -%}
                <div
                  class="slideshow__slide slider__slide grid__item grid--1-col"
                  id="Slide-{{ section.id }}-{{ forloop.index }}"
                  {{ block.shopify_attributes }}
                  role="group"
                  aria-roledescription="{{ 'sections.announcements.announcement' | t }}"
                  aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                  tabindex="-1"
                >
                  <div class="announcement-bar__announcement">
                    <div class="announcement-bar__announcement-content">
                      {%- if block.settings.text != blank -%}
                        {%- if block.settings.link != blank -%}
                          <a
                            href="{{ block.settings.link }}"
                            class="announcement-bar__link link link--text focus-inset animate-arrow"
                          >
                        {%- endif -%}
                        <p class="announcement-bar__message h5">
                          <span>{{ block.settings.text | escape }}</span>
                          {%- if block.settings.link != blank -%}
                            {{- 'icon-arrow.svg' | inline_asset_content -}}
                          {%- endif -%}
                        </p>
                        {%- if block.settings.link != blank -%}
                          </a>
                        {%- endif -%}
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              {%- endfor -%}
            </div>
            <button
              type="button"
              class="slider-button slider-button--next"
              name="next"
              aria-label="{{ 'sections.announcements.next_announcement' | t }}"
              aria-controls="Slider-{{ section.id }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </span>
            </button>
          </div>
        </slideshow-component>
        {%- if request.design_mode -%}
          <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
          <style>
            /* theme editor power preview fix */
            .announcement-bar-slider .slider__slide[aria-hidden='true'] {
              visibility: hidden;
            }
          </style>
        {%- endif -%}
      {%- endif -%}
    {%- endif -%}
    {%- if section.settings.show_social and social_icons -%}
      {%- render 'social-icons' -%}
    {%- endif -%}
    <div class="localization-wrapper">
      {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
        <localization-form class="small-hide medium-hide">
          {%- form 'localization', id: 'AnnouncementCountryForm', class: 'localization-form' -%}
            <div>
              <h2 class="visually-hidden" id="AnnouncementCountryLabel">{{ 'localization.country_label' | t }}</h2>
              {%- render 'country-localization', localPosition: 'AnnouncementCountry' -%}
            </div>
          {%- endform -%}
        </localization-form>
      {%- endif -%}
      {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
        <localization-form class="small-hide medium-hide">
          {%- form 'localization', id: 'AnnouncementLanguageForm', class: 'localization-form' -%}
            <div>
              <h2 class="visually-hidden" id="AnnouncementLanguageLabel">{{ 'localization.language_label' | t }}</h2>
              {%- render 'language-localization', localPosition: 'AnnouncementLanguage' -%}
            </div>
          {%- endform -%}
        </localization-form>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:sections.announcement-bar.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.announcement-bar.settings.change_slides_speed.label",
      "default": 5
    },    
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "inverse"  /* Inverse for white text on black background */
    }, 
    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": true,
      "label": "t:sections.header.settings.show_line_separator.label"
    },
    {
      "type": "header",
      "content": "t:sections.announcement-bar.settings.heading_utilities.content"
    },
    {
      "type": "paragraph",
         "content": "t:sections.announcement-bar.settings.paragraph.content"
    },           
    {
      "type": "checkbox",
      "id": "show_social",
      "default": false,
      "label": "t:sections.announcement-bar.settings.show_social.label",
      "info": "t:sections.announcement-bar.settings.show_social.info"
    },
    {
      "type": "checkbox",
      "id": "enable_country_selector",
      "default": false,
      "label": "t:sections.announcement-bar.settings.enable_country_selector.label",
      "info": "t:sections.announcement-bar.settings.enable_country_selector.info"
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "default": false,
      "label": "t:sections.announcement-bar.settings.enable_language_selector.label",
      "info": "t:sections.announcement-bar.settings.enable_language_selector.info"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "header",
          "content": "Contact Information (appears on left)"
        },
        {
          "type": "text",
          "id": "phone_number",
          "label": "Phone Number",
          "default": "+1 (234) 567-8900",
          "info": "Enter phone number. Leave blank to hide."
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email Address",
          "default": "hello@example.com",
          "info": "Enter email. Leave blank to hide."
        },
        {
          "type": "text",
          "id": "text",
          "default": "t:sections.announcement-bar.blocks.announcement.settings.text.default",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label",
          "info": "This text will slide in the center."
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement-bar.presets.name",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
