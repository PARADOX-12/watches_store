<style>
  .utility-bar {
  background-color: #000000;
  color: #ffffff;
  width: 100%;
  height: 45px;
  display: flex;
  align-items: center;
}

/* Main grid container */
.announcement-bar__grid {
  display: flex;
  align-items: center;  /* Vertically center */
  justify-content: space-between;
  position: relative;
  width: 100%;
  height: 100%;  /* Take full height of utility bar */
  padding: 0;
  margin: 0;
}

/* Announcement content - centered */
.announcement-bar__announcement-content {
  flex: 1;
  display: flex;
  align-items: center;  /* Vertical center */
  justify-content: center;  /* Horizontal center */
  height: 100%;
  width: 100%;
  padding: 0 2rem;
  text-align: center;
}

/* Swiper slider */
.announcement-swiper {
  width: 557px;
  height: 100%;
  display: flex;
  align-items: center;
  cursor: grab;
}

.announcement-swiper:active {
  cursor: grabbing;
}

/* Swiper wrapper */
.announcement-swiper .swiper-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

/* Swiper slide - centered */
.announcement-swiper .swiper-slide {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: auto;
  flex-shrink: 0;
}

/* Message text - bold and centered */
.announcement-bar__message {
  margin: 0;
  padding: 0;
  font-size: 1.2rem;
  font-weight: 500;  
  color: #ffffff;
  white-space: nowrap;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  line-height: 1;
}

/* Link styling */
.announcement-bar__link {
  color: #ffffff;
  text-decoration: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  font-weight: 700;  /* Bold */
}

/* Contact info on left */
.announcement-bar__contact {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-shrink: 0;
  font-size: 0.85rem;
  font-weight: 600;  /* Slightly bold */
  min-width: 250px;
  height: 45px;
}

.announcement-bar__contact a {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #ffffff;
  text-decoration: none;
  white-space: nowrap;
  font-weight: 500;
  font-size: 1.2rem;
  left: 10px;
}

.announcement-bar__contact svg {
  width: 1rem;
  height: 1rem;
  fill: #ffffff;
}

/* Mobile responsive */
@media screen and (max-width: 989px) {
  .announcement-bar__contact {
    display: none !important;
  }

  .announcement-bar__grid {
    justify-content: center;
  }

  .announcement-bar__announcement-content {
    padding: 0 1rem;
  }

  .announcement-bar__message {
    font-size: 0.9rem;
    font-weight: 700;
  }
}


